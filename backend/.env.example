# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/orbitbot_db
USE_SQLITE=false

# JWT Configuration
SECRET_KEY=your-secret-key-change-this-in-production-make-it-long-and-random
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Application Configuration
APP_HOST=127.0.0.1
APP_PORT=8000

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./backend/uploads

# LLM Provider Configuration
LLM_PROVIDER=ollama  # Options: "ollama" or "openai"

# Ollama Configuration
OLLAMA_HOST=http://localhost:11435
OLLAMA_MODEL=llama3.2:1b

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo  # Options: gpt-3.5-turbo, gpt-4, gpt-4-turbo-preview, gpt-4o, gpt-4o-mini
OPENAI_TEMPERATURE=0.4
OPENAI_MAX_TOKENS=400

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Vector Store Configuration
TOP_K_RESULTS=5
CHUNK_SIZE=1000
CHUNK_OVERLAP=200


